<?xml version="1.0" encoding="utf-8"?>

<!-- Main activity intent calls this details activity -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/myapp_margin_large"
        android:layout_marginLeft="@dimen/myapp_margin_large"
        android:layout_marginRight="@dimen/myapp_margin_large"
        android:paddingBottom="@dimen/myapp_padding_large"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_posterpath"
                android:layout_width="@dimen/myapp_cardview_width"
                android:layout_height="@dimen/myapp_cardview_image_height"
                android:background="@color/myapp_image_background"
                android:padding="@dimen/myapp_padding_medium" />

            <LinearLayout
                android:id="@+id/movie_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/myapp_margin_large"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/movie_title"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/myapp_margin_medium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/release_date_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_released"
                    android:layout_marginTop="@dimen/myapp_margin_small"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/release_date_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/myapp_margin_medium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/vote_average_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vote_average"
                    android:layout_marginTop="@dimen/myapp_margin_small"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vote_average_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/myapp_margin_medium"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/overview_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/myapp_margin_large"
            android:text="@string/movie_overview"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/overview_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:paddingBottom="@dimen/myapp_padding_large"/>

    </LinearLayout>

</ScrollView>